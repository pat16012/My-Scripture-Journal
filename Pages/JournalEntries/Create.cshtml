@page
@model My_Scripture_Journal.Pages.JournalEntries.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Journal Entry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JournalEntry.Book" class="control-label"></label>
                <select id="Select1" asp-for="JournalEntry.Book" class="form-control">
                    <option>Old Testament</option>
                    <option>New Testament</option>
                    <option>Book of Mormon</option>
                    <option>Doctrine and Covenants</option>
                    <option>Pearl of Great Price</option>
                </select>      
                <span asp-validation-for="JournalEntry.Book" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.JournalEntryInput" class="control-label"></label>
                <input asp-for="JournalEntry.JournalEntryInput" class="form-control" />
                <span asp-validation-for="JournalEntry.JournalEntryInput" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.EntryAdded" class="control-label"></label>
                <input asp-for="JournalEntry.EntryAdded" class="form-control" />
                <span asp-validation-for="JournalEntry.EntryAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
