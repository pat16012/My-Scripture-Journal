@page 
@model My_Scripture_Journal.Pages.JournalEntries.IndexModel

@{
    ViewData["Title"] = "Journal Entries";
}

<h1>Journal Entries</h1>

<form>
    <p>
        <select asp-for="BookTitle" asp-items="Model.Books">
            <option value="">All</option>
        </select>
        Keyword: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-rout-sortOrder="@Model.BookSort">
                    @Html.DisplayNameFor(model => model.JournalEntry[0].Book)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JournalEntry[0].JournalEntryInput)
            </th>
            <th>
                <a asp-page="./Index" asp-rout-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.JournalEntry[0].EntryAdded)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.JournalEntry) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JournalEntryInput)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryAdded)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
